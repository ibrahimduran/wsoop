{
  "name": "wsoop",
  "version": "0.2.0",
  "description": "Framework for developing efficient WebSocket server applications.",
  "main": "build/index.js",
  "types": "./build/index.d.ts",
  "typescript.tsdk": "./build",
  "scripts": {
    "build": "tsc",
    "dev-env": "tsc --watch",
    "test": "nyc mocha",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/**/*"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "lcov"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ibrahimduran/wsoop.git"
  },
  "keywords": [
    "socket",
    "websocket",
    "framework"
  ],
  "author": "Ä°brahim Duran",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ibrahimduran/wsoop/issues"
  },
  "homepage": "https://github.com/ibrahimduran/wsoop#readme",
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/mocha": "^2.2.41",
    "chai": "^3.5.0",
    "coveralls": "^2.13.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.3.0",
    "nyc": "^10.3.2",
    "prettier": "^1.3.1",
    "remap-istanbul": "^0.9.5",
    "ts-node": "^2.1.0",
    "typescript": "^2.3.2"
  },
  "dependencies": {
    "@types/socket.io": "^1.4.29",
    "@types/socket.io-client": "^1.4.29",
    "debug": "^2.6.1",
    "socket.io": "^1.7.3",
    "socket.io-client": "^1.7.3"
  }
}
